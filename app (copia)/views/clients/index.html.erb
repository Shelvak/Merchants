<h1><%= Client.human_attribute_name(:clients) %> </h1>

<table>
  <tr>
    <th><%= Client.human_attribute_name(:name) %> </th>
    <th><%= Client.human_attribute_name(:last_name) %></th>
    <th><%= Client.human_attribute_name(:document) %></th>
    <th><%= Client.human_attribute_name(:amount) %></th>
  </tr>

<% @clients.each do |client| %>
  <tr>
    <td><%= client.name %></td>
    <td><%= client.last_name %></td>
    <td><%= link_to client.document, client %></td>
    <td>$<%= client.amount %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to t('new.client'), new_client_path %> <br />
<%= will_paginate @clients %>
