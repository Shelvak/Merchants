<h1>Listing products</h1>

<table>
  <tr>
    <th>Barcode</th>
    <th>Name</th>
    <th>Mark</th>
    <th>Fragance</th>
    <th>Price</th>
    <th>Count</th>
    <th>Uni</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.barcode %></td>
    <td><%= product.name %></td>
    <td><%= product.mark %></td>
    <td><%= product.fragance %></td>
    <td><%= product.price %></td>
    <td><%= product.count %></td>
    <td><%= product.uni %></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= link_to 'Destroy', product, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

