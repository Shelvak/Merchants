<h1><%= t('product.products') %></h1>

<table>
  <tr>
    <th><%= t('product.barcode') %></th>
    <th><%= t('product.name') %></th>
    <th><%= t('product.mark') %></th>
    <th><%= t('product.fragance') %></th>
    <th><%= t('product.price') %></th>
    <th><%= t('product.count') %></th>
    <th><%= t('product.uni') %></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= link_to product.barcode, product %></td>
    <td><%= product.name %></td>
    <td><%= product.mark %></td>
    <td><%= product.fragance %></td>
    <td>$<%= product.price %></td>
    <td><%= product.count %></td>
    <td><%= product.uni %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to t('product.new'), new_product_path %>
