<h2>Nueva caja</h2>

<%= simple_form_for @shift_closure do |f| %>
  <% if (errors = f.object.errors).any? && errors[:base].present? %>
    <div class="alert alert-error">
      <% errors[:base].each do |error| %>
        - <%= error %><br />
      <% end %>
    </div>
  <% end %>

  <div class="form-inputs" id="shift_closure_form">
    <div class="row-fluid">
      <div class="span4">
        <%= f.input :start_at, as: :datetime_picker %>
      </div>
      <div class="span4">
        <%= f.input :finish_at, as: :datetime_picker %>
      </div>
    </div>
    <hr />
    <div class="row-fluid">
      <div class="span4">
        <%= f.input :initial_amount %>
      </div>
      <div class="span4">
        <%= f.input :cashbox_amount %>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span4">
        <%= f.input :payoffs %>
      </div>
    </div>
    <div class="span4">
      <%= f.input :final_amount %>
    </div>
    <hr />
    <hr />
    <div class="row-fluid">
      <%= f.input :comments,
        input_html: { class: 'span12' } %>
    </div>
  </div>

  <div class="form-actions">
    <div class="pull-right"><%= yield :form_actions %></div>
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
