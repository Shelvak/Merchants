<h1><%= t('titles.store') %></h1>

  <%= form_tag "/store", method: :get do %>
    <%= text_field_tag :search, params[:search], autofocus: true, class: 'search' %>
    <%= submit_tag t "label.search" %>
  <% end %>
<br />

<table>

<tr>
<th><%= Product.human_attribute_name(:name)%></th>
<th><%= Product.human_attribute_name(:mark)%></th>
<th><%= Product.human_attribute_name(:fragance)%></th>
<th><%= Product.human_attribute_name(:category)%></th>
<th><%= Product.human_attribute_name(:count)%></th>
<th><%= Product.human_attribute_name(:price)%></th>
<th><%= Product.human_attribute_name(:stock)%></th>
</tr>

<%= render @products %>

</table>
<%= will_paginate @products %>
